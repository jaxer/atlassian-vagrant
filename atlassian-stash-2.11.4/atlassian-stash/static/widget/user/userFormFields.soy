{namespace stash.widget}

/**
 * @param form
 * @param? fieldErrors
 * @param? disabled
 */
{template .userFormFields}
    {call widget.aui.form.text}
        {param id: 'username' /}
        {param labelContent: stash_i18n('stash.web.login.username.html', 'Username') /} // reuse the login page's i18n keys, so that both text is the same
        {param initialValue: $form.username /}
        {param maxLength: 255 /}
        {param errors: $fieldErrors ? $fieldErrors.username : null /}
        {param autofocus: true /}
        {param required: true /}
        {param disabled: $disabled /}
    {/call}
    {call widget.aui.form.text}
        {param id: 'fullname' /}
        {param labelContent: stash_i18n('stash.web.signup.fullname.html', 'Full name') /}
        {param initialValue: $form.fullname /}
        {param maxLength: 255 /}
        {param errors: $fieldErrors ? $fieldErrors.fullname : null /}
        {param required: true /}
        {param disabled: $disabled /}
    {/call}
    {call widget.aui.form.text}
        {param id: 'email' /}
        {param labelContent: stash_i18n('stash.web.signup.email.html', 'Email address') /}
        {param initialValue: $form.email /}
        {param maxLength: 255 /}
        {param errors: $fieldErrors ? $fieldErrors.email : null /}
        {param required: true /}
        {param disabled: $disabled /}
    {/call}
    {call widget.aui.form.password}
        {param id: 'password' /}
        {param labelContent: stash_i18n('stash.web.login.password.html', 'Password') /}
        {param initialValue: '' /}
        {param maxLength: 255 /}
        {param errors: $fieldErrors ? $fieldErrors.password : null /}
        {param required: true /}
        {param disabled: $disabled /}
    {/call}
    {call widget.aui.form.password}
        {param id: 'confirmPassword' /}
        {param labelContent: stash_i18n('stash.web.signup.confirmpassword.html', 'Confirm password') /}
        {param initialValue: '' /}
        {param maxLength: 255 /}
        {param errors: $fieldErrors ? $fieldErrors.confirmPassword : null /}
        {param required: true /}
        {param disabled: $disabled /}
    {/call}
{/template}
