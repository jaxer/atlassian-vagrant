{namespace stash.feature.repository}

/**
 * @param id
 * @param? ref  //Either `ref` (object) or plain `text`
 * @param? text
 * @param? autofocus
 * @param? extraClasses
 * @param? extraAttributes
 */
{template .branchSelectorTrigger}
    {call .revisionReferenceSelectorTrigger}
        {param id: $id/}
        {param ref: $ref/}
        {param text: $text ? $text : stash_i18n('stash.web.branchSelector.default', 'Select branch')/}
        {param autofocus: $autofocus/}
        {param extraClasses: $extraClasses/}
        {param extraAttributes: $extraAttributes/}
    {/call}
{/template}

/**
 * @param id
 * @param? ref  //Either `ref` (object) or plain `text`
 * @param? text
 * @param? fieldName     //Name for form field
 * @param? fieldId       //ID for form field
 * @param? autofocus
 * @param? extraClasses
 * @param? extraAttributes
 */
{template .branchSelectorTriggerWithField}
    {call .revisionReferenceSelectorTriggerWithField}
        {param id: $id/}
        {param ref: $ref/}
        {param text: $text ? $text : stash_i18n('stash.web.branchSelector.default', 'Select branch')/}
        {param fieldName: $fieldName/}
        {param fieldId: $fieldId/}
        {param autofocus: $autofocus/}
        {param extraClasses: $extraClasses/}
        {param extraAttributes: $extraAttributes/}
    {/call}
{/template}